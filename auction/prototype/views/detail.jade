doctype html
html
    head
        meta(charset='utf-8')
    body
        h1
            a(href='/goods') 경매시스템
        p 
            h3 아이디 : #{goods.id}
        p 
            h3 상품명 : #{goods.name}    
        p 
            h3 낙찰자 : #{goods.winUser}
        p 
            h3 낙찰금액: #{goods.endPrice}

        <br>
        h2 ################### 경매 참여하기 ########################   
        form(action='/bidInfo/#{goods.id}' method="post")
            p 사용자ID :
                input(type='text' name="id" placeholder='사용자ID')
            P 입찰금액 :
                input(type='text' name="price" placeholder='입찰금액')
            p
                input(type='submit')
        <br>
        h2 ################### 현재 입찰정보 ########################                   
        ul  
            each bidInfo in bidInfos
                li 사용자 : #{bidInfo.userId} , 입찰가격 : #{bidInfo.price}

        <br>
        h2 ################### 경매 종료하기 ########################                    
        form(action='/goods/#{goods.id}' method="post")
            p
                input(type='submit' value='경매종료')        